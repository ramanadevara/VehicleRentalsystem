<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:context="com.example.abhin.vehiclerentalsystem.bikespecs">

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="115dp"
        android:layout_height="105dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView12"
        android:layout_marginStart="75dp"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/bactiva" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_below="@+id/imageButton4"
        android:layout_marginTop="21dp"
        android:layout_toStartOf="@+id/textView2"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/bbullet" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/imageButton2"
        android:layout_below="@+id/imageButton2"
        android:layout_marginTop="27dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/br15" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/imageButton"
        android:layout_below="@+id/imageButton"
        android:layout_marginTop="26dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/bsplender" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageButton"
        android:layout_marginBottom="38dp"
        android:layout_marginStart="27dp"
        android:layout_toEndOf="@+id/imageButton4"
        android:background="@android:color/transparent"
        android:text="Honda Activa "
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView2"
        android:layout_alignTop="@+id/imageButton4"
        android:layout_marginTop="36dp"
        android:text="Hero Splender"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView9"
        android:layout_alignTop="@+id/imageButton2"
        android:layout_marginTop="36dp"
        android:text="Classic 350"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView10"
        android:layout_alignTop="@+id/imageButton3"
        android:layout_marginTop="39dp"
        android:text="Yamaha R15"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="15dp"
        android:fontFamily="monospace"
        android:text="Bikes:"
        android:textColor="#000000"
        android:textSize="28sp" />

</RelativeLayout>
