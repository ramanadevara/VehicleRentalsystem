<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homebag"
    tools:context="com.example.abhin.vehiclerentalsystem.home">

    <TextView
        android:id="@+id/tchoose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="17dp"
        android:fontFamily="@font/aclonica"
        android:text="Choose your vehicle"
        android:textColor="@android:color/black"
        android:textSize="25sp" />

    <ImageButton
        android:id="@+id/bbike"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/tchoose"
        android:layout_below="@+id/tchoose"
        android:layout_marginStart="42dp"
        android:layout_marginTop="27dp"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/bike"
        android:background="@null"/>

    <ImageButton
        android:id="@+id/bhatchback"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/bbike"
        android:layout_below="@+id/bbike"
        android:layout_marginTop="18dp"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/hatchback"
        android:background="@null"/>

    <ImageButton
        android:id="@+id/bsedan"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/bhatchback"
        android:layout_below="@+id/bhatchback"
        android:layout_marginTop="36dp"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/sedan"
        android:background="@null"/>

    <ImageButton
        android:id="@+id/bsuv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/bbike"
        android:layout_marginStart="60dp"
        android:layout_toEndOf="@+id/bbike"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/suv"
        android:background="@null"/>

    <ImageButton
        android:id="@+id/bpremium"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/bsuv"
        android:layout_alignTop="@+id/bhatchback"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/premium"
        android:background="@null"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/bbike"
        android:layout_below="@+id/bbike"
        android:layout_marginStart="37dp"
        android:text="bike"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tchoose"
        android:layout_below="@+id/bsuv"
        android:layout_marginEnd="12dp"
        android:text="SUV"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/bsedan"
        android:layout_below="@+id/bhatchback"
        android:layout_marginEnd="19dp"
        android:text="Hatchback"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignEnd="@+id/tchoose"
        android:text="Premium"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView3"
        android:layout_below="@+id/bsedan"
        android:text="Sedan"
        android:textColor="@android:color/black" />
</RelativeLayout>
